<%- include('../partials/header') %>

    <nav>
      <a href="/flights/new">Add Flight</a>
    </nav>
    <h2>Flight List</h2>
    <table>
      <thead>
        <tr>
          <th>Airline</th>
          <th>Airport</th>
          <th>Flight No.</th>
          <th>Departs</th>
          <th>Details</th>
        </tr>
      </thead>
      <tbody>
        <% flights.forEach(function(f) {%>
        <tr>
          <td><%= f.airline %></td>
          <td><%= f.airport %></td>
          <td><%= f.flightNo %></td>
          <td type="date"><%= f.departs%></td>
          <td><a href="/flights/<%=f._id%>">Details</a></td>
        </tr>
        <%});%>
      </tbody>
    </table>
    <%- include('../partials/footer') %>
